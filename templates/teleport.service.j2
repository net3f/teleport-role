[Unit]
Description=Teleport SSH Service
After=network.target

[Service]
Type=simple
Restart=always
ExecStart=/usr/local/bin/teleport start --config={{ teleport_config_path }} --pid-file={{ teleport_pidfile }} {{ teleport_opts | default('') }}
ExecReload=/bin/kill -HUP $MAINPID
PIDFile={{ teleport_pidfile }}

[Install]
WantedBy=multi-user.target
